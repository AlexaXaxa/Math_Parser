<UserControl x:Class="Math_Parser_1._0.View.UserControls.CustomTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Math_Parser_1._0.View.UserControls"
             mc:Ignorable="d" 
             Height="50" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btnPlus" FontSize="30" VerticalContentAlignment="Center" Content="+" Padding="0,0,0,10"/>

        <TextBox x:Name="txtInput" 
                 Grid.Column="1" 
                 VerticalContentAlignment="Center" 
                 FontSize="17" 
                 FontWeight="Light" 
                 KeyDown="TextBox_KeyDown"
                 Background="Transparent"
                 Panel.ZIndex="1"
                 TextChanged="txtInput_TextChanged"/>
        <TextBlock x:Name="tblPlaceholder" Grid.Column="1" Text="Inmatningsfält..." FontSize="17" FontWeight="Light" Margin="7, 0, 0, 0" VerticalAlignment="Center" Foreground="DarkGray"/>
        
        <Button x:Name="btnClear" 
                Grid.Column="1" 
                Width="50" 
                FontSize="17" 
                HorizontalAlignment="Right" 
                Content=":" 
                Background="Transparent" 
                Click="btnClear_Click"
                Panel.ZIndex="2">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Radera" Click="Radera_Click"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        



    </Grid>
</UserControl>